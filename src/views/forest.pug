doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="http//use.fontawesome.com/releases/v5.15.4/css/all.css", integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm", crossorigin="anonymous")
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="./public/css/style-forest.css")
        title Yoom
    body(class="background-image")
        
        header
            i(class="fab fa-pied-piper-square fa-2x")
            h1 haehyup-Forest ROOM
        main
            //- img(src='/public/gif-file/rain.gif')
            div#welcome 
                
                form
                    input#roomName(type="text", required, placeholder="Room Name")
                    input#nickname(type="text", required, placeholder="Your Nickname")
                    button Enter Room
            div#call(class="call")
                div#streamBox
                    div#streams
                        div#myStream(class="people1")
                            video#myFace(autoplay, playsinline, width="400", height="400")
                            h3#userNickname  
                    div#controlers
                        div#controlers__column
                            select#cameras
                        div#controlers__column
                            div#buttons
                                button#mute
                                    i(class="fas fa-microphone fa-2x unMuteIcon")
                                    i(class="fas fa-microphone-slash fa-2x muteIcon")
                                button#camera 
                                    i(class="fas fa-video fa-2x cameraIcon")
                                    i(class="fas fa-video-slash fa-2x unCameraIcon")
                        div#controlers__column
                            button#leave Leave
                            button#audio 배경음악 재생
                div#chatRoom
                    ul#chatBox
                    form#chatForm
                        input(required, type="text", placeholder="메모 입력")
                        button 저장
                
            
        aside.modal.hidden
            div.modal__box
                h2.modal__text
                button.modal__btn OK




        script(src="/socket.io/socket.io.js")
        script(src="/public/js/forest.js")


